<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlerPlateformeActivity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_layout"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-16dp" />

    <Button
        android:id="@+id/boutonDroite"
        style="@style/IconOnlyButton"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_margin="5sp"
        android:contentDescription="@string/bouton_droite_plateforme"
        android:textAlignment="center"
        app:cornerRadius="15sp"
        app:icon="@drawable/arrow_right"
        app:iconSize="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/boutonHaut"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <Button
        android:id="@+id/boutonGauche"
        style="@style/IconOnlyButton"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_margin="5sp"
        android:contentDescription="@string/bouton_gauche_plateforme"
        android:textAlignment="center"
        app:cornerRadius="15sp"
        app:icon="@drawable/arrow_left"
        app:iconSize="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/boutonBas"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <Button
        android:id="@+id/boutonHaut"
        style="@style/IconOnlyButton"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_margin="5sp"
        android:contentDescription="@string/bouton_haut_plateforme"
        android:textAlignment="center"
        app:cornerRadius="15sp"
        app:icon="@drawable/arrow_up"
        app:iconSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/boutonGauche"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/boutonBas"
        style="@style/IconOnlyButton"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_margin="5sp"
        android:contentDescription="@string/bouton_bas_plateforme"
        android:textAlignment="center"
        app:cornerRadius="15sp"
        app:icon="@drawable/arrow_down"
        app:iconSize="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boutonDroite"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/boutonObtenirMasse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16sp"
        android:onClick="ObtenirMasse"
        android:text="@string/obtenir_masse"
        android:textAllCaps="true"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/boutonHaut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.675" />

    <TextView
        android:id="@+id/textviewMasse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/masse_ici"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/boutonObtenirMasse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include"
        app:layout_constraintVertical_bias="0.803" />


</androidx.constraintlayout.widget.ConstraintLayout>